{
    "compilerOptions": {
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "esnext",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "allowJs": true,
        "strict": true,
        "outDir": "dist",
        "jsx": "preserve",
        "sourceMap": true,
        "baseUrl": "./",
        "paths": {
            "@/*": ["./src/*"],
            "~/*": ["./*"]
        },
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": ["esnext", "dom"]
    },
    "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"],
    "exclude": ["node_modules", "dist"]
}
